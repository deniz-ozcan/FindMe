<resources>
    <style name="Theme.FindMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#00ffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:colorAccent">#ffffff</item>
        <item name="android:background">#0A9749</item>
        <item name="dialogCornerRadius">20dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveAlertButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveAlertButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeAlertButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeAlertButtonStyle</item>
    </style>
    <style name="PositiveAlertButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="NegativeAlertButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>